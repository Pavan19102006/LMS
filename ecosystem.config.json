{
  "apps": [
    {
      "name": "lms-backend",
      "script": "index.js",
      "cwd": "./server",
      "instances": 1,
      "exec_mode": "fork",
      "watch": false,
      "max_memory_restart": "1G",
      "env": {
        "NODE_ENV": "production",
        "PORT": 5001
      },
      "env_development": {
        "NODE_ENV": "development",
        "PORT": 5001
      },
      "log_file": "./logs/backend-combined.log",
      "out_file": "./logs/backend-out.log",
      "error_file": "./logs/backend-error.log",
      "time": true
    },
    {
      "name": "lms-frontend",
      "script": "serve",
      "args": "-s build -l 3000",
      "cwd": "./client",
      "instances": 1,
      "exec_mode": "fork",
      "watch": false,
      "env": {
        "PORT": 3000
      },
      "log_file": "./logs/frontend-combined.log",
      "out_file": "./logs/frontend-out.log",
      "error_file": "./logs/frontend-error.log",
      "time": true
    }
  ]
}
